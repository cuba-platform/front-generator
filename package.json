{
  "name": "@cuba-platform/front-generator",
  "version": "2.0.0",
  "description": "CUBA Platform front-end clients generator",
  "main": "lib/cli.js",
  "bin": {
    "gen-cuba-front": "bin/gen-cuba-front.js"
  },
  "engines": {
    "node": ">=8.0"
  },
  "scripts": {
    "compile": "tsc",
    "build": "rimraf lib && tsc && node scripts/copy-templates.js",
    "watch": "tsc -w",
    "test": "mocha --config test/mocha.js.opts",

    "test:e2e": "mocha 'test/e2e/*.test.js' --grep 'polymer2|sdk|react' --timeout 0",
    "test:e2e:sdk": "mocha 'test/e2e/sdk.test.js'  -g 'sdk' --timeout 0",
    "test:e2e:react": "mocha 'test/e2e/react-client.test.js'  -g 'react' --timeout 0",
    "test:e2e:polymer2": "mocha 'test/e2e/polymer2.test.js'  -g 'polymer2' --timeout 0",
    "test:e2e:polymer2-ts": "mocha 'test/e2e/polymer2-ts.test.js'  -g 'polymer2-ts' --timeout 0",

    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cuba-labs/cuba-front-generator"
  },
  "dependencies": {
    "commander": "~2.13.0",
    "through2": "^2.0.5",
    "typescript": "3.4.1",
    "yeoman-environment": "~2.4.0",
    "yeoman-generator": "~4.0.1"
  },
  "devDependencies": {
    "@types/ejs": "^2.5.1",
    "@types/mocha": "^2.2.48",
    "@types/node": "^9.6.17",
    "@types/through2": "^2.0.33",
    "@types/yeoman-generator": "^2.0.3",
    "mocha": "^5.1.1",
    "rimraf": "^2.6.2",
    "source-map-support": "^0.5.6",
    "ts-node": "^4.1.0",
    "vinyl-fs": "^3.0.3"
  },
  "author": "CUBA Platform Team <info@cuba-platform.com>",
  "license": "Apache-2.0"
}
